{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "eslint.enable": true,
  "eslint.validate": [
    "javascript", 
    "javascriptreact", 
    "typescript", 
    "typescriptreact"
  ],

  "typescript.tsserver.log": "verbose",
  "typescript.tsdk": "node_modules/typescript/lib"
}