{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "pretty": true,
    "declaration": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "diagnostics": true,
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": ".",
    "outDir": "./lib/dist",

  },
  "include": [ "./lib/src/**/*",]
}
